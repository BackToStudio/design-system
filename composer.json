{
  "name": "backto/design-system",
  "description": "Le design system de PQP",
  "type": "library",
  "autoload": {
    "psr-4": {
      "BackTo\\DesignSystem\\": "src/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "pre-commit": [
      "phpcs --standard=PSR12 src/"
    ],
    "fix-cs": [
      "phpcbf --standard=PSR12 src/"
    ],
    "post-install-cmd": [
      "sh git-hooks/install-hooks.sh"
    ],
    "post-update-cmd": [
      "sh git-hooks/install-hooks.sh"
    ]
  },
  "license": "proprietary"
}
